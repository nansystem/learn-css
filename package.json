{
  "scripts": {
    "start": "run-p sync css-watch",
    "sync": "browser-sync start --server ./public --files='./public/*.html, ./public/css/*.css'",
    "css-build": "node-sass --include-path src/scss src/scss/style.scss public/css/style.css",
    "css-watch": "npm run css-build -- --watch",
    "ejs": "ejs-cli --base-dir src/ejs/ '/**/[^_]*.ejs' --out ./public/"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3",
    "ejs-cli": "^2.0.1",
    "node-sass": "^4.11.0",
    "npm-run-all": "^4.1.5"
  }
}
